# Server
PORT=3000

# Database - Aiven MySQL Configuration
# Get these values from your Aiven console: https://console.aiven.io/

# Option 1: Individual parameters (recommended for Aiven)
DB_HOST="your-mysql-service.aivencloud.com"
DB_PORT="3306"
DB_USER="avnadmin"
DB_PASSWORD="your_password_here"
DB_NAME="defaultdb"
DB_SSL="true"

# Option 2: Connection URL (alternative)
# DATABASE_URL=mysql://avnadmin:password@your-mysql-service.aivencloud.com:3306/defaultdb?ssl=true

# Environment
NODE_ENV=development
